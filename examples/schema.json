{
    "$schema": "http://json-schema.org/schema",
    "title": "Logipedia object specification",
    "description": "",
    "examples": [
        {
            "id": 0,
            "name": "Pi",
            "taxonomy": "axiom",
            "ttype": {
            },
            "body": null,
            "exports": [
                {
                    "file": "path"
                }
            ]
        }
    ],
    "definitions": {
        "taxon": {
            "type": "string",
            "pattern": "^(axiom|theorem|definition|constant)$"
        },
        "general": {
            "type": "object",
            "properties": {
                "id": {
                    "$comment": "a unique identifier",
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "taxonomy": {
                    "$ref": "#/definitions/taxon"
                },
                "ttype": {
                    "type": "object"
                },
                "body": {
                    "$comment": "Proof or definition",
                    "type": [
                        "null",
                        "object"
                    ]
                },
                "dependencies": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "taxonomy": {
                                "$ref": "#/definitions/taxon"
                            }
                        }
                    }
                },
                "theory": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "taxonomy": {
                                "$ref": "#/definitions/taxon"
                            }
                        }
                    }
                },
                "to": {
                    "$comment": "Available export systems.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "export": {
            "$comment": "Section concerning a particular export system.",
            "type": "object",
            "properties": {
                "file": {
                    "type": "string"
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "general": {
            "$ref": "#/definitions/general"
        },
        "exports": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/export"
            }
        }
    }
}