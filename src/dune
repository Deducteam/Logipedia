  (name core)
  (public_name logipedia.core)
  (wrapped false) ; For subdirs
  (modules :standard \ logipedia pvs sttfa2pvs
           json json_types
           middleware middleware_cic middleware_sttfa middleware_switch
           dk2json)
  (preprocess (pps ppx_deriving_yojson))
  (libraries unix str dedukti.kernel dedukti.api))

