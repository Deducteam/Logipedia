{
    "$schema": "http://json-schema.org/schema",
    "title": "Logipedia object specification",
    "description": "A single file describing a logipedia object, contains a general section and a section dedicated to export systems.",
    "type": "object",
    "definitions": {
        "taxon": {
            "type": "string",
        },
        "logic": {
            "type": "string"
        },
        "general": {
            "type": "object",
            "properties": {
                "name": {
                    "$comment": "Unique fully qualified name",
                    "type": "string"
                },
                "taxonomy": {
                    "type": "string"
                },
                "term": {
                    "$ref": "ppterm.json#/definitions/term"
                },
                "term_opt": {
                    "$comment": "Optional ppterm",
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "ppterm.json#/definitions/term"
                        }
                    ]
                },
                "dependencies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "theory": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "export": {
                    "$comment": "Available export systems.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/logic"
                    }
                }
            },
            "required": [
                "name",
                "taxonomy",
                "term",
                "term_opt",
                "dependencies",
                "theory"
            ]
        },
        "export": {
            "$comment": "Section concerning a particular export system.",
            "type": "object",
            "properties": {
                "system": {
                    "type": "string"
                },
                "file": {
                    "type": "string"
                },
                "etype": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "file",
                "system"
            ]
        }
    },
    "properties": {
        "name": {
            "$ref": "#/definitions/general/name"
        }
        "taxonomy": {
            "$ref": "#/definitions/general/taxonomy"
        }
        "term": {
            "$ref": "#/definitions/general/term"
        }
        "term_opt": {
            "$ref": "#/definitions/general/term_opt"
        }
        "deps": {
            "$ref": "#/definitions/general/dependencies"
        }
        "theory": {
            "$ref": "#/definitions/general/theory"
        }
        "exp": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/export"
            }
        }
    },
    "required": [
        "name", "taxonomy", "term", "deps", "theory"
    ]
}
