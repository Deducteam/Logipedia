{
    "$schema": "http://json-schema.org/schema",
    "title": "Logipedia object specification",
    "description": "A single file describing a logipedia object, contains a
                    general section and a section dedicated to export systems.",
    "examples": [
        {
            "general": {
                "name": "Example.Pi",
                "taxonomy": "axiom",
                "ttype": [
                    "Binder",
                    {
                        "symbol": "Î ",
                        "bound": "x",
                        "annotation": "Nat",
                        "body": [
                            "Const",
                            {
                                "c_id": [
                                    "Nat",
                                    "c"
                                ],
                                "c_args": []
                            }
                        ]
                    }
                ],
                "body": null
            },
            "exports": [
                {
                    "file": "path"
                }
            ]
        }
    ],
    "definitions": {
        "taxon": {
            "type": "string",
            "pattern": "^(axiom|theorem|definition|constant)$"
        },
        "logic": {
            "type": "string",
            "pattern": "^(coq|matita|lean|pvs|dedukti)$"
        },
        "general": {
            "type": "object",
            "properties": {
                "name": {
                    "$comment": "Unique fully qualified name",
                    "$ref": "basics.json/definitions/qid"
                },
                "taxonomy": {
                    "$ref": "#/definitions/taxon"
                },
                "ttype": {
                    "$ref": "ppterm.json#"
                },
                "body": {
                    "$comment": "Proof or definition",
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "ppterm.json#"
                        }
                    ]
                },
                "dependencies": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "$ref": "basics.json#/definitions/qid"
                            },
                            "taxonomy": {
                                "$ref": "#/definitions/taxon"
                            }
                        }
                    }
                },
                "theory": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "$ref": "basics.json#/definitions/qid"
                            },
                            "taxonomy": {
                                "$ref": "#/definitions/taxon"
                            }
                        }
                    }
                },
                "to": {
                    "$comment": "Available export systems.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/logic"
                    }
                }
            },
            "required": [
                "name",
                "taxonomy",
                "ttype",
                "dependencies",
                "theory"
            ]
        },
        "export": {
            "$comment": "Section concerning a particular export system.",
            "type": "object",
            "properties": {
                "system": {
                    "$ref": "#/definitions/logic"
                },
                "file": {
                    "type": "string"
                },
                "etype": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "file",
                "system"
            ]
        }
    },
    "type": "object",
    "properties": {
        "general": {
            "$ref": "#/definitions/general"
        },
        "exports": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/export"
            }
        }
    },
    "required": [
        "general"
    ]
}