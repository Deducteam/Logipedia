{
    "$schema": "http://json-schema.org/schema",
    "title": "Pretty printable terms",
    "description": "Defines the 'term' object",
    "examples": [],
    "definitions": {
        "term": {
            "$comment": "Main entity of the file",
            "$comment": "Ocaml variants as arrays",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "string",
                        "pattern": "^(Binder|Const|Var)$"
                    },
                    {
                        "$ref": "#/definitions/Var"
                    },
                    {
                        "$ref": "#/definitions/Binder"
                    },
                    {
                        "$ref": "#/definitions/Const"
                    }
                ]
            }
        },
        "Var": {
            "type": "object",
            "required": [
                "vsymb",
                "vapp"
            ],
            "properties": {
                "vsymb": {
                    "$ref": "basics.json#/definitions/id"
                },
                "vapp": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/term"
                    }
                }
            }
        },
        "Const": {
            "type": "object",
            "required": [
                "csymb",
                "capp"
            ],
            "properties": {
                "csymb": {
                    "$ref": "basics.json#/definitions/qid"
                },
                "capp": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/term"
                    }
                }
            }
        },
        "Binder": {
            "type": "object",
            "required": [
                "bsymb",
                "bound",
                "body"
            ],
            "properties": {
                "bsymb": {
                    "type": "string"
                },
                "bound": {
                    "$ref": "basics.json#/definitions/id"
                },
                "annotation": {
                    "type": [
                        "null",
                        {
                            "$ref": "#/definitions/term"
                        }
                    ]
                },
                "body": {
                    "$ref": "#/definitions/term"
                }
            }
        }
    },
}
